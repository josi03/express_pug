doctype html
html
 head
   title #{titolo}
   link(rel='stylesheet', href='/css/style.css')
   meta(name="viewport" content="width=device-width, initial-scale=1")
 body
  header.header
   h1 #{title}
  div.profile
   div.profile-image(style=`background: url('/images/${person.image}') top center no-repeat; background-size: cover;`)
   div.profile-details
    h1.profile-name #{person.nome} (#{person.eta} anni)